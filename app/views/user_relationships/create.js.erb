$('div.follow_btn').toggleClass('already');
if($('div.follow_btn').hasClass('btn-primary')) {
  $('div.follow_btn').removeClass('btn-primary');
  $('div.follow_btn').addClass('btn-light');
  $('div.follow_btn').html('フォローする');
} else if($('div.follow_btn').hasClass('btn-light')) {
  $('div.follow_btn').removeClass('btn-light');
  $('div.follow_btn').addClass('btn-primary');
  $('div.follow_btn').html('フォロー中');
} else {
  $('div.follow_btn').addClass('btn-primary');
  $('div.follow_btn').html('フォロー中');
}
